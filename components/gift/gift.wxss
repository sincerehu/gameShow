/* components/gift/gift.wxss */

.gift-bg {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 1;
}

.gift-content {
  position: fixed;
  bottom: -700px;
  left: 0;
  background: #fff;
  z-index: 2;
  color: #000;
  width: 100%;
  font-size: 24rpx;
}

.bottom-in {
  -webkit-animation: bottom-in 0.3s forwards;
  animation: bottom-in 0.3s forwards;
}

@-webkit-keyframes bottom-in {
  0% {
    bottom: -700px;
    opacity: 0;
  }

  100% {
    bottom: 0;
    opacity: 1;
  }
}

.gift-box {
  padding-top: 30rpx;
  padding-bottom: 20rpx;
  height: auto;
}

.slide-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx
}

.gift-choose {
  width: 22%;
  margin-left: 2.4%;
  text-align: center;
  display: inline-block;
  box-sizing: border-box;
  border-radius: 16rpx;
  padding: 22rpx 0;
}

.isTap {
  border: 4rpx solid #f17635;
}

.gift-name {
  margin-top: 6rpx;
}

.gift-money {
  color: #a2a4b0;
  font-size: 22rpx;
}

.navbar {
  font-size: 26rpx;
}

.give {
  display: inline-block;
  text-align: center;
  width: 120rpx;
  margin-left: 20rpx;
  position: relative;
}

.act {
  color: #f0752f;
}

.act text {
  width: 40rpx;
  height: 4rpx;
  background: #f0752f;
  display: inline-block;
  position: absolute;
  left: 40rpx;
  border-radius: 4rpx;
}

.font-gift {
  float: right;
}

.font-gift {
  color: #959595;
  margin-right: 20rpx;
}

.choose-team {
  padding: 20rpx 0;
  background: #efefef;
  margin-top: 20rpx;
  text-align: center;
}

.team-box {
  display: inline-block;
  padding: 46rpx;
  box-sizing: border-box;
}

.team-box image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}

.team-vs {
  width: 80rpx;
  height: 80rpx;
  display: inline-block;
  margin: 40rpx 60rpx;
}

.item-box {
  box-sizing: border-box;
  padding-top: 70rpx;
}

.swiper {
  height: 360rpx;
}

.person-box {
  width: 18%;
  display: inline-block;
  box-sizing: border-box;
  padding: 32rpx;
  text-align: center;
  margin-left: 1.3%;
  font-size: 22rpx
}

.person-box image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx
}

.item-box-person {
  text-align: center;
  box-sizing: border-box;
  padding: 10rpx 0;
}

.btn-box {
  padding: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.addMoney {
  display: inline-block;
}

.addMoney image {
  width: 40rpx;
  height: 40rpx;
  float: left;
  position: relative;
  top: 10rpx;
}

.addMoney text {
  display: inline-block;
  margin: 0 20rpx;
  font-size: 26rpx;
}

.addMoney view {
  display: inline-block;
  color: #ef6300;
  font-size: 32rpx;
}

.send-btn {
  float: right;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  border-radius: 30rpx;
  height: 60rpx;
  width: 180rpx;
  background: linear-gradient(to right, #fdb436, #fb7600);
  color: #fff;
}

.team-act {
  border-radius: 16rpx;
  box-shadow: 0rpx 0rpx 60rpx 4rpx #cdc9c9;
}

.person-act {
  border-radius: 16rpx;
  box-shadow: 0rpx 0rpx 20rpx 2rpx #cdc9c9;
}
