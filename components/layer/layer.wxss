/* components/layer/layer.wxss */
.success {
  width: 80%;
  position: fixed;
  z-index: 3;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: #fff;
  text-align: center;
  color: #f0752f;
  border-radius: 30rpx;
}

.img-box image {
  display: inline-block;
  width: 100%;
  height: 460rpx;
}

.text-box {
  position: relative;
  top: -60rpx;
}

.success-money {
  font-size: 36rpx;
  font-weight: bold;
  position: relative;
  top: 20rpx
}

.success-btn {
  background: linear-gradient(to right, #fdb436, #fb7600);
  color: #fff;
  display: inline-block;
  height: 70rpx;
  line-height: 70rpx;
  width: 300rpx;
  font-size: 30rpx;
  border-radius: 30rpx;
  margin-top: 20rpx;
  position: relative;
  top: 30rpx
}
.fail-btn {
  background: linear-gradient(to right, #9390E1, #5F54CA);
  color: #fff;
  display: inline-block;
  height: 70rpx;
  line-height: 70rpx;
  width: 300rpx;
  font-size: 30rpx;
  border-radius: 30rpx;
  margin-top: 20rpx;
  position: relative;
  top: 30rpx
}
.layer-bg{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2
}
.fail-text{
  color: #444;
  font-size: 32rpx;
}